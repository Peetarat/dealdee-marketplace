rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Products: Publicly readable, but only writable by the owner or an admin.
    match /products/{productId} {
      allow read: if true;
      allow create: if request.auth != null; // Further checks are in the Cloud Function
      allow update, delete: if request.auth.uid == resource.data.ownerId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users: Only the user themselves or an admin can read/write their own data.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
